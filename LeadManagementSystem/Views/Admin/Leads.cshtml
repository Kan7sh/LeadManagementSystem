@model List<Lead>




@if (Model.Count()==0)
{
    <br />
    <br />
    <span style="color:#596c81; font-size:28px; font-weight:600">No Leads Found</span>

    <br />

}
else
{
   <div style="margin-top:10px;">
    <span style="color:#596c81; font-size:28px; font-weight:600">@Model[0].Status Leads</span><br />
        <span style="color:#596c81; font-size:14px; font-weight:300;text-align:justify;">All Leads with @Model[0].Status status</span>
    </div>
    <br />
        <span style="color:#596c81; font-size:14px; font-weight:600;text-align:justify;">Count: @Model.Count()</span>
    <br />
}

        @foreach (var lead in Model)
        {

                    <br />

                            <div class="card" style="background-color:white;padding:0px; border:0px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); margin-left:50px; margin-right:50px">
                                        <span class="card-header" style="background-color:white;font-size:15px;border-radius:14px 14px 0px 0px;font-weight:300"><i class="bi bi-person-fill-down"></i>&nbsp;&nbsp;@lead.AgentName</span>
                  <div class="card-body d-flex justify-content-between">
                  <div>

                                                      <h5 class="card-title"><i class="bi bi-person-fill" style="color:#D3bcf0"></i>&nbsp;@lead.UserName</h5>
                                        <span class="card-text">@lead.PhoneNumber</span>
                                                                                <p class="card-text">@lead.Email</p>
                                                                <p class="card-text"><i class="bi bi-house-door-fill"></i>&nbsp;@lead.Address ,@lead.City</p>
                  </div>
                  <div class="d-flex flex-column align-items-end">
                                                    <a asp-action="EditLead" asp-controller="Admin" asp-route-leadId="@lead.Id" class="btn btn-primary" style="width:80px; height:38px;background-color:#7688f6"><i class="bi bi-pencil-square"></i></a>
                                                            <a asp-action="LeadStatuses" asp-controller="Admin" asp-route-leadId="@lead.Id" class="btn btn-primary" style="width:100px; height:38px;background-color:#7688f6;margin-top:10px;font-size:12px;padding-top:10px">Remarks</a>
                                </div>
                            </div>
            </div>

