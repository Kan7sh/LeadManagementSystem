@model LeadManagementSystem.Models.Manager
@using Microsoft.AspNetCore.Identity;


 <div style="margin-top:10px;">
<span style="color:#596c81; font-size:28px; font-weight:600">Edit Manager</span><br />
<span style="color:#596c81; font-size:14px; font-weight:300;text-align:justify;">Edit the required details of manager</span>
</div>
   <br />
<form method="post">
      <input type="hidden" asp-for="PasswordHash" >
    <input type="hidden" asp-for="Id" >
  <div class="form-group">
    <input   asp-for="Fullname" class="form-control" id="Name"  placeholder="Full name"/>
    <span asp-validation-for="Fullname" class="text-danger" ></span>
  </div>
    <br >

  <div class="form-group">
    <input asp-for="Email" class="form-control" id="Email" placeholder="Email address"/>
    <span asp-validation-for="Email" class="text-danger" ></span>
  </div>
  <br >
  <div class="form-group">
    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone number"/>
    <span asp-validation-for="PhoneNumber" class="text-danger" ></span>
  </div>
    <br >




    <div class="form-group">
    <input asp-for="Address" class="form-control" id="Address" placeholder="Address"/>
     <span asp-validation-for="Address" class="text-danger" ></span>

  </div>

  <br >
    <div class="form-group">
    <input asp-for="City" class="form-control" id="City" placeholder="City"/>
    <span asp-validation-for="City" class="text-danger" ></span>

  </div>

    <br >


  <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}
