@model LeadManagementSystem.Models.Lead
@using Microsoft.AspNetCore.Identity;


 <div style="margin-top:10px;">
<span style="color:#596c81; font-size:28px; font-weight:600">Edit Lead</span><br />
<span style="color:#596c81; font-size:14px; font-weight:300;text-align:justify;">Edit the required details of Lead</span>
</div>
<br />


<form method="post">
    <input  type="hidden" asp-for="Id"/>
    <div class="form-group">
        <input asp-for="UserName" class="form-control" id="Name" placeholder="Full name" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <input asp-for="Email" class="form-control" id="Email" placeholder="Email address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <input asp-for="Address" class="form-control" id="Address" placeholder="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>

    <br>
    <div class="form-group">
        <input asp-for="City" class="form-control" id="City" placeholder="City" />
        <span asp-validation-for="City" class="text-danger"></span>

    </div>
    <br>
   <input type="hidden" asp-for="AgentId"/>
      <input type="hidden" asp-for="AgentName"/>
            <input type="hidden" asp-for="Status"/>


    <div class="form-group">

        <select asp-for="Source" name="Source" class="form-control" id="Source">
            <option value="Instagram">Instagram</option>
            <option value="LinkedIn">LinkedIn</option>
            <option value="Twitter">Twitter</option>
            <option value="Facebook">Facebook</option>


        </select>
        <span asp-validation-for="Source" class="text-danger"></span>


    </div>
    <br>

    <button type="submit" class="btn btn-primary" style="width:100px">Save</button>
</form>



<div id="toast-container" class="toast-container"></div> 

@section Scripts {
                    <partial name="_ValidationScriptsPartial" />

}