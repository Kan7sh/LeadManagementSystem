@model List<Lead>

    <div class="d-flex justify-content-between align-items-center">
        <div style="margin-top:10px;">
<span style="color:#596c81; font-size:28px; font-weight:600">Leads</span><br />
<span style="color:#596c81; font-size:14px; font-weight:300;text-align:justify;">List of all leads under you.</span>
</div>
<a asp-action="AddLead" asp-controller="Manager"><button type="button" class="btn btn-primary" style="font-size:12px"><i class="bi bi-plus-lg"></i>&nbsp;&nbsp;Add Lead</button></a>
</div>

<br >
 <br />
        <span style="color:#596c81; font-size:14px; font-weight:600;text-align:justify;">Count: @Model.Count()</span>
    <br />

        @foreach (var lead in Model)
        {

                       <br />

                                <div class="card" style="background-color:white;padding:0px; border:0px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); margin-left:50px; margin-right:50px">
                                            <span class="card-header" style="background-color:white;font-size:15px;border-radius:14px 14px 0px 0px;font-weight:300"><i class="bi bi-person-fill-down"></i>&nbsp;&nbsp;@lead.AgentName</span>
                      <div class="card-body d-flex justify-content-between">
                      <div>
                                                      <span style="color:#596c81; font-size:18px; font-weight:600">@lead.Status</span><br />

                                                              <h5 class="card-title" style="color:#7c50ca;font-weight:400"><i class="bi bi-person-fill" style="color:#D3bcf0"></i>&nbsp;@lead.UserName</h5>
                                            <span class="card-text">@lead.PhoneNumber</span>
                                                                                    <p class="card-text">@lead.Email</p>
                                                                    <p class="card-text"><i class="bi bi-house-door-fill"></i>&nbsp;@lead.Address ,@lead.City</p>
                      </div>
                      <div class="d-flex flex-column align-items-end">
                @if (lead.Status != "Closed-Won" && lead.Status != "Closed-Lost")
                {
                                                                                        <a asp-action="EditLead" asp-controller="Manager" asp-route-leadId="@lead.Id" class="btn btn-primary" style="width:80px; height:38px;background-color:#7688f6"><i class="bi bi-pencil-square"></i></a>

                }
                                    </div>
                                </div>
                </div>

