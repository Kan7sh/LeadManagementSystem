@model LeadManagementSystem.Models.Agent
@using Microsoft.AspNetCore.Identity;

@{
    var userId = ViewBag.UserId as string;
}
 <div style="margin-top:10px;">
<span style="color:#596c81; font-size:28px; font-weight:600">Add Agent</span><br />
<span style="color:#596c81; font-size:14px; font-weight:300;text-align:justify;">Add the required details of agent</span>
</div>
   <br />

<form method="post">
        <input type="hidden" asp-for="ManagerID" value=@userId>

    <div class="form-group">
        <input asp-for="Fullname" class="form-control" id="Name" placeholder="Full name" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <input asp-for="Email" class="form-control" id="Email" placeholder="Email address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <input asp-for="PasswordHash" class="form-control" id="Password" placeholder="Password" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <input asp-for="Address" class="form-control" id="Address" placeholder="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>

    <br>
    <div class="form-group">
        <input asp-for="City" class="form-control" id="City" placeholder="City" />
        <span asp-validation-for="City" class="text-danger"></span>

    </div>
    <br>
  

    <button type="submit" class="btn btn-primary" style="width:100px">Save</button>
</form>



<div id="toast-container" class="toast-container"></div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />

}
